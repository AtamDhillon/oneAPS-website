    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch API",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/api/Web/bin/Debug/netcoreapp3.1/Dta.OneAps.Api.Web.dll",
            "args": [],
            "cwd": "${workspaceFolder}/api/Web",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "^\\s*Now listening on:\\s+(https?://\\S+)"
            }
        }
    ]
}
